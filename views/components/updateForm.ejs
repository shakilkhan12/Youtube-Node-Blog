<form action="/update" method="Post">
    <div class="group">
        <h3>Update post</h3>
    </div>
    <div class="group">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" class="control" placeholder="Post title" value="<%= post.title %>">
    </div>
    <input type="hidden" name="hiddenID" value="<%= post._id %>">
    <div class="group">
        <label for="body">Body</label>
        <textarea name="body" id="body" class="control" cols="30" rows="10"><%= post.body %></textarea>
    </div>
    <div class="group">
        <input type="submit" value="Update Post" class="btn btn-sweet">
    </div>
</form>