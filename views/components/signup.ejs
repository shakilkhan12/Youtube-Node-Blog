<div class="form-container">
    <% if(errors.length > 0) { %>
    <div class="errors">
        <% errors.forEach(error => {  %>
        <span class="error"><%= error.msg %></span>
        <% }) %>
    </div>
    <% } %>
    <form class="accountForms" action="/register" method="POST">
        <div class="group">
            <h3>Create new account</h3>
        </div>
        <div class="group">
            <label for="name">Name</label>
            <input type="text" name="name" id="name" class="control" placeholder="Name" value=<% if(inputs){ %>
                <%= inputs.name %> <% } %>>
        </div>
        <div class="group">
            <label for="email">Email</label>
            <input type="email" name="email" id="email" class="control" placeholder="Email" value=<% if(inputs){ %>
                <%= inputs.email %> <% } %>>
        </div>
        <div class="group">
            <label for="password">Password</label>
            <input type="password" name="password" class="control" id="password" placeholder="Password"
                value=<% if(inputs){ %> <%= inputs.password %> <% } %>>
        </div>
        <div class="group">
            <input type="submit" class="btn btn-sweet" value="Register">
        </div>
    </form>
</div>